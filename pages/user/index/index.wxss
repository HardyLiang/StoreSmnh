.head-bg{
  width: 100%;
  height: 230rpx;
  position:relative;
  background: #0dc19c;
  overflow: hidden
}
.back-bg{
  position: absolute;
  bottom:-50rpx;
  left: 50%;
  width: 120%;
  height: 80px;
  background: #fff;
  border-radius: 100%;
  z-index: 0;
  margin-left: -60%;
}

.head-bg-img{
  width: 100%;
  height: 100%; 
}
.user-header{
  width: 120rpx;
  height: 120rpx;
  border: 1px solid rgba(255, 255, 255, .8);
  border-radius: 50%;
  position: absolute;
  top: 46rpx;
  left: 50%;
  margin-left:-65rpx;
  overflow: hidden; 

}
.user-header image{
  width: 100%;
  height: 100%;
}
.user-name{
  position: absolute;
  top: 175rpx;
  display: block;
  width: 100%;
  text-align: center;
  color: #000;
  font-size: 32rpx;
  margin: 0 auto;
}
