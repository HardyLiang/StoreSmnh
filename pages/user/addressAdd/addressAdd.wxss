/*省市区文本框*/
.area_select {
	color: #333;
	width: 60%;
}

.poi {
	font-size: 12px;
}

/*高亮当前所选地区*/
.area-selected {
	color: red;
}

/*初始隐藏*/
.hidden {
	display: none;
}

/*运行时显示*/
.show {
	display: block;
}

/*单元格*/
.cell {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items:center;
	margin-top: 10px;
	border-bottom: 1px solid #eee;
	line-height: 80rpx;
}
.cell text{
   margin-right: 20rpx;
}
.cell input{
   flex: 1;
}
